#extends("wtgf:page/layout/layoutBind.vm")
#block("page_var")
#set($currentNav="usercenter")
#set($GF_VIEWINFO.mainNav='r6')
#set($GF_VIEWINFO.subNav='c61')
#end
#block("content_main")
#widget("wtgf:widget/modal/modal.vm")
<div class="_big_content_box">
    <dl class="_dl_content">
        <dt><img src="/static/wtgf/img/personalCenter/personal_icon01.png" alt="" />基本资料</dt>
        <dd>
            <ul class="msg_list">
                <li class="clearfix">
                    <span>姓名</span>
                    <p>$!{name}</p>
                </li>
                <li class="clearfix">
                    <span>昵称</span>
                    <p>$!{nickname}</p>
                </li>
                <li class="clearfix">
                    <span>开户证件
                    <input type="hidden" name="certificateNo" id="certificateNo" value="$!{certificateNo}" />
                    <input type="hidden" name="certificateType" id="certificateType" value="$!{certificateType}" />
                    </span>
                    <p>$!{certificateNo}</p>
                    <div>
                        #if($certificateType == "0" && $certificateNo.length == 15)
                            <a href="javascript:;" id="updateIdentityNo">15位转换为18位</a>
                        #end

                    </div>
                </li>
                <li class="clearfix">
                    <span>证件有效期</span>
                    <p>#if($!{certValidDate} == "2999-01-01")永不过期#else$!{certValidDate}#end</p>
                    <div class="_inputHide">
                        #if($!{certValidDate} == "2999-01-01")
                            <input class="change_this_txt date_change _do_focus" type="text" id="validDate" name="validDate" value="" />
                        #else
                            <input class="change_this_txt date_change _do_focus" type="text" id="validDate" name="validDate" value="$!{certValidDate}" />
                        #end
                        #if($certificateType == "0")
                            <input type="checkbox" class="change_this_txt" name="yjyx" id="yjyx" value="" /><span>永不过期</span>
                        #end
                    </div>
                    <div>
                        <a class="toInput" href="javascript:;">修改</a>
                        <a class="save hide" id="changeCertValidDate" href="javascript:;">保存</a>
                        <a class="cancel hide" href="javascript:;">取消</a>
                    </div>
                </li>
                <li class="clearfix">
                    <span>电子邮件</span>
                    <p>$!{emailAddress}</p>
                    <div class="_inputHide">
                        <input class="change_this_txt _do_focus" id="emailAddress" name="emailAddress" type="text" />
                    </div>
                    <div>
                        <a class="toInput" href="javascript:;">修改</a>
                        <a class="save hide" id="changeEmailAddress" href="javascript:;">保存</a>
                        <a class="cancel hide" href="javascript:;">取消</a>
                    </div>
                </li>
                <li class="clearfix" style="position: relative;">
                    <span>联系地址</span>
                    <p>$!{address}</p>
                    <div class="addressDiv" id="addressDiv" style="display: none;position: relative">
                        <input class="change_this_txt short_input form-control" type="text" id="city-picker3" readonly type="text" value="" data-toggle="city-picker" />
                        <input class="change_this_txt short_input dizhi_input _do_focus" id="addressDetail" name="addressDetail" type="text" placeholder="请填写详细地址" />
                    </div>
                    <div>
                        <a class="toInput xiugai_dizhi" href="javascript:;">修改</a>
                        <a class="save hide" id="changeAddressInfo" href="javascript:;" style="margin-left: 10px">保存</a>
                        <a class="cancelAddress hide" href="javascript:;">取消</a>
                        <input type="hidden" name="province" id="province" value="" />
                        <input type="hidden" name="cityno" id="cityno" value="" />
                        <input type="hidden" name="districtno" id="districtno" value="" />
                        <input type="hidden" name="address" id="address" value="" />
                        <input type="hidden" name="zipno" id="zipno" value="" />
                    </div>
                </li>
                <li class="clearfix">
                    <span>风险测评</span>
                    <p>$!{riskLevelShow}</p>
                    <div>
                        <a href="/account/showsubject.jsp">修改</a>
                    </div>
                </li>
            </ul>
        </dd>
    </dl>
    <dl class="_dl_content">
        <dt><img src="/static/wtgf/img/personalCenter/personal_icon02.png" alt="" />手机</dt>
        <dd>
            <ul class="msg_list">
                <li class="clearfix">
                    <span>手机号</span>
                    <p>$!{mobilePhoneShow}</p>
                    <div>
                        #if("$!{mobilePhoneShow}" != "")
                            <a href="/main/personalCenter/toChangeMobilePhone">修改</a>&nbsp;&nbsp;&nbsp;&nbsp;
                        #end
                        #if("$!{mobilenoAcconame}" != "")
                            <a href="javascript:;" id="closeMobilePhone">关闭手机登录</a>
                        #end
                    </div>
                </li>
            </ul>
        </dd>
    </dl>
</div>
#end
#block("bottom_scripts")
<script type="text/javascript" src="/static/common/citypicker/city-picker.data.js"></script>
<script type="text/javascript" src="/static/common/citypicker/city-picker.js"></script>
#end
#require("wtgf:page/personalCenter/personalCenterIndex/personalCenterIndex.vm")

#end