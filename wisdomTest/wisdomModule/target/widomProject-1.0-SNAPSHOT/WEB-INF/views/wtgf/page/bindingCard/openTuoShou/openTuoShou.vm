#extends("wtgf:page/layout/layoutBind.vm")
    #block("page_var")
    #set($currentNav="account")
    #set($GF_VIEWINFO.mainNav='r5')
    #set($GF_VIEWINFO.subNav='c51')
    #end
    #block("content_main")
    <div class="content-main">
        <!-- 银行卡-START -->
        <div class="container-bank wrap" style="margin-left: 0px;">
            <div class="pageMain" style="padding:0 0 0 0;padding-bottom:2px">
                <div class="bank-main tsqy-bank-main">
                    <div class="tsqy-step">
                        <!-- 步骤相应的class为main-step1、main-step2、main-step3 -->
                        <div class="step-main main-step1">
                            <i class="line"></i>
                            <div class="step step1 active">
                                <p>确认银行卡信息</p>
                                <span>1</span>
                            </div>
                            <div class="step step2">
                                <p>银行托收签约</p>
                                <span>2</span>
                            </div>
                            <div class="step step3">
                                <p>托收签约成功</p>
                                <span>3</span>
                            </div>
                        </div>
                    </div>

                    <div class="tsqy-main">
                        <div class="bank-item item-nobr">
                            <form name="frm" id="frm" method="POST" action="/main/mycards/opentuoshou" target="_blank">
                                <input type="hidden" name="tradeAcco" id="tradeAcco" value="$!{tradeAcco}" />
                                <dl class="clearfix">
                                    <dd>
                                        <span class="t">银行名称</span>

                                        <label class="in-label" style="line-height: 48px">$!{bankName}</label>
                                    </dd>
                                    <dd>
                                        <span class="t">原银行卡号</span>
                                        <label class="in-label" style="line-height: 48px">$!{oldBankCardNo}</label>
                                    </dd>
                                    <dd>
                                        <span id="xyTips">
                                            <input id="agreeCheckbox" name="agreeCheckbox" type="checkbox" checked style="margin-bottom:5px">
                                            请阅读并同意 <a href="http://www.gffunds.com.cn/etrade/fw/jygz/wsjygz/200709/t20070925_8282.htm" target="_blank" style="cursor: pointer;">《委托转账收付款服务协议》</a>
                                        </span>
                                    </dd>
                                    <dd>
                                        <input class="skins-btn in-sub" type="submit" value="下一步">
                                    </dd>
                                </dl>
                            </form>
                        </div>
                    </div>

                    <div class="cz-help">
                        <h3><img src="/static/wtgf/img/bindingCard/i1.png" alt="">帮助</h3>
                        <a href="javascript:void(0);" class="backTop">回到顶部</a>
                        <dl>
                            <dt>1 . 托收签约后可以做些什么？</dt>
                            <dd>答：托收签约后可以直接进行认申购、定投等交易。支付时无需跳转网银，快捷方便。</dd>
                        </dl>
                    </div>

                </div>
            </div>
        </div>
        <!-- 银行卡-END -->

    </div>

    <div id="modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
        <div class="modal-header" style="height:20px;background-color:#e2e2e2;">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <span id="myModalLabel">温馨提示</span>
        </div>
        <div class="modal-body">
            <div id="showInfoMsg" style="font:12px/1.5em 'Microsoft YaHei'"></div>
        </div>
    </div>

    <div id="modal3" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
        <div class="modal-header" style="height:20px;background-color:#e2e2e2;">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <span id="myModalLabel">银行卡验证提示信息</span>
        </div>
        <div class="modal-body">
            <div id="showInfoMsg" style="font:12px/1.5em 'Microsoft YaHei'">
                <div class="pop pop-bank-ask pop-main pop-content">
                    <h3>请您在新打开的银行页面验证银行卡</h3>
                    <p class="tips">验证银行卡完成前不要关闭此窗口</p>
                    <p>
                        <a class="skins-btn2 btn-again" href="javascript:void(0)" id="submitAgain" style="color:#fff;text-decoration: none">
                            失败了,再试一次
                        </a>
                        <a class="skins-btn2" href="" style="color:#fff;text-decoration: none">验证成功</a>
                    </p>
                    <a class="cjwt" href="http://www.gffunds.com.cn/khfw/bzzx/cjwt/wsjy/jyfy/index_helpty.htm" target="_blank">添加银行卡常见问题&gt;</a>
                    <br><br>
                </div>
            </div>
        </div>
    </div>

    <form name="frm2" id="frm2" action="" method="post" target="_blank">
        <div id="createForm"></div>
    </form>

    #end
    #require("wtgf:page/bindingCard/openTuoShou/openTuoShou.vm")

#end
