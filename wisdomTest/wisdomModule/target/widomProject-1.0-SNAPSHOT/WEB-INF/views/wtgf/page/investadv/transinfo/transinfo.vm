#extends("wtgf:page/layout/layout.vm")
#block("header_scripts")
#require("wtgf:static/css/investadv/gftg_account.css")

#end
#block("page_var")
#set($currentNav="investadv")
#set($currentSubNav="transinfo")
#set($GF_VIEWINFO.mainNav='r9')
#set($GF_VIEWINFO.subNav='c40')
#set($GF_VIEWINFO.activityUrl=$activityUrl)
#set($USE_BOOTSTRAP=0)
#end

#block("content_main")

<!-- 调仓方案-START -->
<div class="container-account">
    <div class="pageMain">

    ##<div class="banner">
    ##    <div class="banner-boxx" style="background-image:url(static/images/banner.jpg);"></div>
    ##</div>
        <!-- 修改模块 -->
        <div class="account-main account-cz-main">

            <div class="account_main_tab">
                <ul class="clearfix">
                    <li><a href="/main/investadv/advinfo?advid=$!{advid}">基本信息</a></li>
                    <li class="current"><a href="/main/investadv/transinfo?advid=$!{advid}">调仓方案</a></li>
                    <li><a href="/main/investadv/transinstruction?advid=$!{advid}">调仓指令</a></li>
                    <li><a href="/main/investadv/holds?advid=$!{advid}">账户持仓</a></li>
                    <li><a href="/main/investadv/profinfo?advid=$!{advid}">风险收益</a></li>
                    <li><a href="javascript:volid(0)">模拟试算</a></li>
                </ul>
            </div>
            <form action="/main/investadv/transinfo" method="post" class="item_table dcfa_msg">
                <input type="hidden" name="advid" id="advid" value="$!{advid}"/>
                <table>
                    <tr class="first_tr">
                        <td colspan="9">
                            <div>
                                <label for="start_data">起始日期：</label>
                                <input type="text" id="start_data" name="startDate"
                                       value="$!{startDate}"/>
                            </div>
                            <div>
                                <label for="over_data">结束日期：</label>
                                <input type="text" id="over_data" name="endDate"
                                       value="$!{endDate}"/>
                            </div>
                            <div class="select_list">
                                <label class="shengxiao">是否生效：
                                    <select name="stateFilterCode" id="stateFilterCode">
                                        <option value="" #if(!$stateFilterCode || $stateFilterCode == "") selected #end>全部</option>
                                        <option value="1" #if($stateFilterCode == "1") selected #end>是</option>
                                        <option value="0" #if($stateFilterCode == "0") selected #end>否</option>
                                    </select>
                                </label>
                            </div>
                            <div class="right_btn">
                                <input type="submit" value="查询"/>
                                <input type="reset" id="transreset_btn" value="清空"/>
                            </div>
                        </td>
                    </tr>
                    <tr class="table_head">
                        <th>调仓时间</th>
                        <th>申请日期</th>
                        <th>方案别名</th>
                        <th>基金个数</th>
                        <th>仓位</th>
                        <th>调仓理由</th>
                        <th>生效日期</th>
                        <th>是否生效</th>
                        <th></th>
                    </tr>
                    #foreach($transPlan in $transplans)
                        <tr class="can_choose#if($!transPlan.state != "1") can_delete#end">
                            <td>$!date_tool.format("yyyy.MM.dd HH:mm:ss", $transPlan.createtimestamp)<br/>
                            <td>$dsp_tool.transferDateFormat($transPlan.plandate, "yyyyMMdd", "yyyy.MM.dd")</td>
                            <td>$dsp_tool.nvl($!transPlan.alias, '无')</td>
                            <td>$!transPlan.fundnum</td>
                            <td>$!{number_tool.format('##.##%',$!transPlan.totalpercent)}</td>
                            <td>$dsp_tool.nvl($!transPlan.transreason, '无')</td>
                            <td>$dsp_tool.nvl($!transPlan.lastdate, '-')</td>
                            <td>#if($!transPlan.state == "1")
                                    是
                                #else
                                    否
                                #end</td>
                            <td class="last_td" hide-transid="$!transPlan.transid"><span class="tiaocangmx">调仓明细</span>
##                                <span class="sc_zhiling">查看指令</span>
	                        </td>
                        </tr>
                    #end
                </table>
            </form>
            <div class="bottom_btn click">
                <span class="del"><em></em>删除</span>
##                <span class="xiugai"><em></em>修改</span>
                <span class="new_add"><em></em>新增</span>
            </div>
            <!-- 调仓明细 -->
            <div class="dc_detail undisplay"></div>
            <!-- 生成指令 -->
            <div class="create_instruction undisplay">
                <div class="pop_main">
                    <h2>生成指令<em class="js-pop-close"></em></h2>

                    <div class="create_instruction_content">
                        <table>
                            <tr class="table_head">
                                <th>确认日期</th>
                                <th>指令周期</th>
                                <th>指令类型</th>
                                <th>相关基金A</th>
                                <th>相关基金B</th>
                                <th>指令金额</th>
                                <th>指令份额</th>
                                <th>交易费用</th>
                                <th>确认状态</th>
                            </tr>
                            <tr>
                                <td>2015.11.26</td>
                                <td>T+1</td>
                                <td>基金转换</td>
                                <td>广发钱袋子</td>
                                <td>广发聚富</td>
                                <td></td>
                                <td>999.01份</td>
                                <td>0.02</td>
                                <td>成功</td>
                            </tr>
                            <tr>
                                <td>2014.11.28</td>
                                <td>T+2</td>
                                <td>基金申购</td>
                                <td>广发核心</td>
                                <td></td>
                                <td>2,000.00</td>
                                <td></td>
                                <td>0.02</td>
                                <td>失败</td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- 修改模块结束 -->
    </div>
</div>
<!-- 调仓方案-END -->

#end ##content_main

#block("bottom_scripts")
<script type="text/javascript">
    var myWalletCode = "$!_LOGONBEAN_.walletFundCode";
    var totalBalance = null;
	var curHoldsList = [];
	var holdsStr = '$!curholds';
    var tbalaStr = '$!totalbalance';
	try {
        totalBalance = parseFloat(tbalaStr);
		if (totalBalance < 0 || totalBalance == NaN) {
			totalBalance = 0;
        }
	} catch (e){
        alert("获取用户的当前持仓信息异常，请刷新重试或联系我们的客服人员予以解决！");
		totalBalance = 0;
	}

    try {
	    curHoldsList = jQuery.parseJSON(holdsStr);
    } catch (e) {
        alert("获取用户的当前持仓信息异常，请刷新重试或联系我们的客服人员予以解决！");
        curHoldsList = [];
    }
</script>
#end

#require("wtgf:page/investadv/transinfo/transinfo.vm")
#end ##extends