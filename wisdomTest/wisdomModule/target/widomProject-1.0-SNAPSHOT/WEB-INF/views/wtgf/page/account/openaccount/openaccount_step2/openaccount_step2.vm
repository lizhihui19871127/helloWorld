#extends("wtgf:page/layout/layoutNoNav.vm")
#block("page_var")
    #set($HEADER_TITLE="欢迎进入广发基金网上开户注册系统！")
    #set($BOOTSTRAP_CONTAINER="")
    #set($IS_LOGIN=0)
#end
#block("header_scripts")
    <script type="text/javascript">
        window.WTjson = {
            "WT.si_n":"开户流程",
            "WT.si_x":"设置密码"
        }
    </script>
#end
#block("content_main")
    <p class="empty-line"></p>
    <div class="container">
        <div class="row">
        <div class="span8 offset2">
            <p class="gflogo1"></p><p class="gflogo2"></p>
        </div>
    </div>
</div>
<p class="line linehead"></p>
<div class="container">
    <div class="row">
        <div class="span8 offset1 text-center">
            <div class="kh-t">
                <ul>
                    <li><span class="l1">填写资料</span></li>
                    <li class="z-sel"><span class="l2">设置密码</span></li>
                    <li><span class="l3">开户成功</span></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="span10 offset1">
            <form class="form-horizontal alignform" method="post" name="openaccount_step2_form">
                <p class="text-info text-info-tips"><span>设置登录密码</span>保护您的账户信息</p>
                <div class="control-group">
                    <label class="control-label" for="passwords">设置登录密码</label>
                    <div class="controls">
                        <input type="password" name="passwords" id="passwords" otype="button" otitle="设置登录密码" />
                        <span id="passwdTipsSpanPassword" class="inline">（6-10位字母、数字或符号的组合，不能含空格和简单密码）</span>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="passwordsConfirm">确认密码</label>
                    <div class="controls">
                        <input type="password" name="passwordsConfirm" id="passwordsConfirm"  otype="button" otitle="确认密码" />
                    </div>
                </div>

                <p class="text-info text-info-tips"><span>设置联系信息</span>用于接收对账单和找回密码</p>
                <div class="control-group">
                    <label class="control-label" for="mobile">手机号码</label>
                    <div class="controls">
                        <input type="text" maxlength=11 name="mobile" id="mobile" otype="button" otitle="手机号码" />
                        <span id="passwdTipsSpanMobile">（用于找回登录密码和接收交易短信通知）</span>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="smsVFCode">校验码</label>
                    <div class="controls">
                        <input type="text" name="smsVFCode" id="smsVFCode" otype="button" otitle="校验码" />&nbsp;&nbsp;
                        <button class="btn" type="button" id="smsVFCodeBtn" otype="button" otitle="免费获取校验码" >免费获取校验码</button>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="email">Email地址</label>
                    <div class="controls">
                        <input type="text" name="email" id="email" otype="button" otitle="Email地址" />
                        <span id="passwdTipsSpanEmail">（用于交易确认等邮件接收）</span>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="address">联系地址</label>
                    <div class="controls">
                        <input name="address1"  style=" cursor: pointer;background-color:white;"   id="address1" type="text" class="address"
                               value="" onkeydown="return false;" autocomplete="off"  onkeyup="this.value=''" readonly />
                        <input type="hidden" id="province" name="province" value=""/>
                        <input type="hidden" id="city" name="city" value=""/>
                        <input type="hidden" id="districtNo" name="districtNo"
                               value=""/>
                         <input type="hidden" id="zipcode" name="zipcode" value=""/>
                        <input class="inputAddress_201102" type="text" id="address2" name="address2" maxlength="60"
                               value=""  placeholder='请填写详细地址' />

                    </div>
                </div>

                <div class="control-group">
                    <div class="controls">
                        <label class="checkbox  inline" >
                            <input type="checkbox" id="agreeCheckbox" otype="button" otitle="我已阅读" >我已阅读
                            <span id="agreeA">
                            《<a href="http://www.gffunds.com.cn/etrade/fw/jygz/wsjygz/201207/t20120716_22206.htm" target="_blank">网上交易权益须知</a>》、
                            《<a href="http://www.gffunds.com.cn/etrade/fw/jygz/wsjygz/201207/t20120716_22207.htm" target="_blank">网上交易风险提示书</a>》和
                            《<a href="http://www.gffunds.com.cn/143/201207/t20120717_22209.htm" target="_blank">广发社区服务条款</a>》
                            </span>
                        </label>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label"></label> ##解决IE6兼容问题
                    <div class="controls">
                        <button class="btn btn-large btn-warning" id="nextbtn" type="submit">
                            &nbsp;&nbsp;下一步&nbsp;&nbsp;
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    ##提示框
    <div id="myModal" class="modal hide fade">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h3>温馨提示</h3>
        </div>
        <div class="modal-body">
            <p class="text-info text-fontsize16"><span id="modalMsgSpan">
                抱歉，网上开户发生异常，请稍后再试。
            </span></p>
        </div>
        <div class="modal-footer">
            <a href="#" class="btn" data-dismiss="modal" aria-hidden="true">关闭</a>
        </div>
    </div>
</div>
#end
#require("wtgf:page/account/openaccount/openaccount_step2/openaccount_step2.vm")
#end
