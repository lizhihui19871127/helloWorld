        <script type="text/javascript">
            //记录登陆时间

            var arr,
                name = 'loginBeginTime',
                reg=new RegExp("(^| )"+name+"=([^;]*)(;|$)");

            if(arr=document.cookie.match(reg)){
                var loginBeginTime = unescape(arr[2]);

                if(loginBeginTime && loginBeginTime != ""){

                    var loginTime = (new Date()).getTime() - parseInt(loginBeginTime);

                    if(document.readyState!="complete"){
                        document.onreadystatechange = function(){
                            if(document.readyState=="complete"){
                                if (typeof(dcsPageTrack)=="function"){
                                    dcsPageTrack("WT.login_time",loginTime,true,"WT.si_n","登录",true,"WT.si_x","登录成功",true);
                                }
                            }
                        }
                    }
                    document.cookie = "loginBeginTime=''";
                }
            }
