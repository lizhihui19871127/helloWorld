#extends("wtgf:page/layout/layoutBind.vm")
#block("page_var")
#set($currentNav="usercenter")
#set($GF_VIEWINFO.mainNav='r6')
#set($GF_VIEWINFO.subNav='c63')
#end
#block("content_main")
#widget("wtgf:widget/modal/modal.vm")
<div class="questionReset_box">
    <h5 class="doing_kindly_reminder"><img src="/static/wtgf/img/personalCenter/personal_icon03.png" alt="" />您正在进行修改登录密码:</h5>
    <div class="">
        <form name="frm" id="frm" action="" method="POST" class="_all_form_style">
            <label for="" class="way1_content clearfix">
                <span class="before_txt">当前登录密码</span>
                <div class="_input_content">
                    <input type="password" name="loginPwd" id="loginPwd" value="" placeholder="请输入当前登录密码" class="in-txt"/>
                    <span class="before_txt" id="forgetPwd" style="margin-left: 10px"><a href="/main/resetLoginPwd/resetLoginPwd">忘记密码</a></span>
##
                </div>
            </label>
            <label for="" class="way1_content clearfix">
                <span class="before_txt">新登录密码</span>
                <div class="_input_content">
                    <input type="password" name="newLoginPwd" id="newLoginPwd" value="" placeholder="请输入新登录密码" class="in-txt"/>
                    <span class="tishi" id="tishi">6-20位数字、字母、符合等组合（分大小写）</span>
                </div>
            </label>
            <label for="" class="way1_content clearfix">
                <span class="before_txt">确认新登录密码</span>
                <div class="_input_content">
                    <input type="password" name="againNewLoginPwd" id="againNewLoginPwd" value="" placeholder="请输入确认新登录密码" class="in-txt"/>
                </div>
            </label>
            <div class="next_btn">
                <input type="submit" value="确认" name="next" id="next"/>
            </div>
        </form>
    </div>
</div>
#end
#require("wtgf:page/personalCenter/updateLoginPwd/updateLoginPwd.vm")

#end
