#extends("wtgf:page/layout/newlayoutNoNav.vm")
#block("page_var")
#set($HEADER_TITLE="重置登录密码！")
#set($BOOTSTRAP_CONTAINER="")
#set($IS_LOGIN=0)
#end
#block("content_main")
#widget("wtgf:widget/modal/modal.vm")
<div class="pwReset_content">
    <div class="pwReset_content_center">
        <div class="pwReset_box">
            <div class="pwReset6">
                <div class="progress1">
                    <span class="current one">验证身份</span>
                    <span class="two">验证银行卡</span>
                    <span class="three">重置登录密码</span>
                    <span class="four">重置成功</span>
                </div>
                <form action="/main/resetPwd/bankValidate/checkIdentityNo" class="_all_form_style" id="frm" name="frm">
                    <label for="" class="clearfix">
                        <span class="before_txt">姓名</span>
                        <div class="_input_content">
                            <input type="text" placeholder="请输入姓名" name="name" id="name"/>
                        </div>
                    </label>
                    <label for="" class="clearfix">
                        <span class="before_txt">证件号码</span>
                        <div class="_input_content">
                            <input type="text" placeholder="请输入证件号码" name="identityNo" id="identityNo"/>
                        </div>
                    </label>
                    <div class="next_btn">
                        <input type="submit" value="下一步" name="nextBtn" id="nextBtn"/>
                        <a href="/main/personalCenter/resetLoginPwd/step2">重新选择验证方式</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
#end
#require("wtgf:page/personalCenter/resetLoginPwd/step3BankVerify/step3BankVerify.vm")

#end
