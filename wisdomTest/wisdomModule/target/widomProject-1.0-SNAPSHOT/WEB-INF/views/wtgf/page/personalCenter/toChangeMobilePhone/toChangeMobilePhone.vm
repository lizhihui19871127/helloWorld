#extends("wtgf:page/layout/layoutBind.vm")
#block("page_var")
#set($currentNav="usercenter")
#set($GF_VIEWINFO.mainNav='r6')
#set($GF_VIEWINFO.subNav='c61')
#end
#block("content_main")
<div class="content-main">
    <div class="NumReset_box">
        <div class="NumReset1">
            <h3><i class="my-icon"></i><span class="my-title">您正在修改手机号码，请选择修改方式：</title></h3>
            <dl>
                <dt><img src="/static/wtgf/img/personalCenter/register_icon18.png" alt="" /></dt>
                <dd>
                    <p class="way">通过短信验证方式</p>
                    <p class="msg">我的<em style="font-style: normal;">$!{mobilePhoneShow}</em>手机还在正常使用</p>
                    <a href="/main/personalCenter/toMobileValidate" class="reset">修改</a>
                </dd>
            </dl>
            <dl>
                <dt><img src="/static/wtgf/img/personalCenter/register_icon19.png" alt="" /></dt>
                <dd>
                    <p class="way">通过银行卡验证方式</p>
                    #if($bankAvaliable)
                        <p class="msg">我的手机无法使用，但已关联银行卡</p>
                        <a href="../checkPwStep1/checkPwStep1.vm?msg=card" class="reset">修改</a>
                    #else
                        <p class="msg">您还没有绑定银行卡，请先+<a href="/main/account/openaccount/bindCard/pre?id=$!{idsId}">添加银行卡</a></p>
                    #end
                </dd>
            </dl>
            <dl>
                <dt><img src="/static/wtgf/img/personalCenter/xiugai_icon01.png" alt="" /></dt>
                <dd>
                    <p class="way">通过回答安全保护问题</p>
                    <p class="msg">我还记得预留的安全保护问题</p>
                    <a href="../checkPwStep1/checkPwStep1.vm?msg=question" class="reset">修改</a>
                </dd>
            </dl>
        </div>
    </div>
</div>

#end
#require("wtgf:page/personalCenter/toChangeMobilePhone/toChangeMobilePhone.vm")

#end
