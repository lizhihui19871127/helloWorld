#extends("wtgf:page/layout/newlayoutNoNav.vm")
#block("page_var")
#set($HEADER_TITLE="重置登录密码！")
#set($BOOTSTRAP_CONTAINER="")
#set($IS_LOGIN=0)
#end
#block("content_main")
#widget("wtgf:widget/modal/modal.vm")
<div class="pwReset_content">
    <div class="pwReset_content_center">
        <div class="pwReset_box">
            <div class="pwReset3">
                <div class="progress1">
                    <span class="current one">验证身份</span>
                    <span class="two">重置登录密码</span>
                    <span class="three">重置成功</span>
                </div>
                <form action="/main/personalCenter/resetLoginPwd/step4"  name="frm" id="frm" class="_all_form_style">
                    <label for="" class="clearfix">
                        <span class="before_txt">手机号</span>
                        <div class="_input_content">$!{mobileNoShow}</div>
                    </label>
                    <input type="hidden" name="identityNoAvailable" id="identityNoAvailable" value="$!{identityNoAvailable}" />
                    #widget("wtgf:widget/sendMsg/sendMsg.vm")
                    #if($identityNoAvailable)
                        <label for="" class="clearfix">
                            <span class="before_txt">验证证件号码</span>
                            <div class="_input_content">
                                <input type="text" id="identityNo" name="identityNo" placeholder="输入证件号码"/>
                            </div>
                        </label>
                    #end
                    <div class="next_btn">
                        <input type="submit" value="下一步" name="nextBtn" id="nextBtn"/>
                        <a href="/main/resetPwd/checkUserName">重新选择验证方式</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
#end
#require("wtgf:page/personalCenter/resetLoginPwd/step3/step3.vm")

#end
