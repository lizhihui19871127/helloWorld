#extends("wtgf:page/layout/newlayoutNoNav.vm")
#block("page_var")
#set($HEADER_TITLE="重置登录密码！")
#set($BOOTSTRAP_CONTAINER="")
#set($IS_LOGIN=0)
#end
#block("content_main")
#widget("wtgf:widget/modal/modal.vm")
<div class="pwReset_content">
    <div class="pwReset_content_center">
        <div class="pwReset_box">
            <div class="pwReset4">
                <div class="progress1">
                    <span class="current one">验证身份</span>
                    <span class="current two">重置登录密码</span>
                    <span class="three">重置成功</span>
                </div>
                <form action="/main/resetPwd/resetPwd" name="frm" id="frm">
                    <label for="" class="clearfix">
                        <span>设置登录密码</span>
                        <div>
                            <input type="password" name="password" id="password" placeholder="输入登录密码"/>
                            <p class="warning">6-20位数字、字母、符合等组合（分大小写）</p>
                        </div>
                    </label>
                    <label for="" class="clearfix">
                        <span>确认登录密码</span>
                        <div>
                            <input type="password" name="passwordAgain" id="passwordAgain" placeholder="再输入一次登录密码" />
                        </div>
                    </label>
                    <div class="next_btn">
                        <input type="submit" value="下一步" name="nextBtn" id="nextBtn"/>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
#end
#require("wtgf:page/personalCenter/resetLoginPwd/step4/step4.vm")

#end
