#extends("wtgf:page/layout/layoutSpecial.vm")
    #block("page_var")
    #set($currentNav="specialshare")
    #set($currentSubNav="index")
    #set($GF_VIEWINFO.subNav='c34')
    #end
    #block("content_main")

    <div class="content-main">
        <!-- 高端理财-START -->
        <form name="queryForm" id="queryForm" action="/main/special/productJz" method="POST">
        <div class="container-vip wrap" style="margin-left: 0px;">
            <div class="pageMain" style="padding:0 0 0 0;padding-bottom:2px">
                <div class="vip-main">
                    <div class="vip-jz-head">
                        <label for="">
                            产品名称：
                            <select id="fundCode" name="fundCode" class="in-sel" style="width:120px;background: #f7f7f7 url(/static/wtgf/img/special/gdlc-icon8.png) 100px 5px no-repeat;">
                                <option value="">全部</option>
                                #foreach($fundList in $fundList.entrySet())
                                    <option value="${fundList.key}" #if(${fundList.key} == ${fundCode}) selected #end>${fundList.value}</option>
                                #end
                            </select>
                        </label>

                        <label for="">
                            起始日期：
                            <input type="hidden" name="startDate" id="startDate" value="${startDate}"/>
                            <input class="in-txt Wdate" id="startDatePicker" readonly="readonly" type="text" style="width:80px;cursor:pointer;height: 15px;line-height: 15px;" value="${startDate}">
                        </label>

                        <label for="">
                            结束日期：
                            <input type="hidden" name="endDate" id="endDate" value="${endDate}"/>
                            <input class="in-txt Wdate" id="endDateTextPicker" type="text" readonly="readonly" style="width:80px;cursor:pointer;height: 15px;line-height: 15px;" value="${endDate}">
                        </label>

                        <label for="">
                            期间：
                            <select class="in-sel" name="segDate" id="segDate">
                                <option value="3" #if(${segDate} == 3) selected #end>最近一个月</option>
                                <option value="2" #if(${segDate} == 2) selected #end>今天</option>
                                <option value="1" #if(${segDate} == 1) selected #end>最近一周</option>
                                <option value="4" #if(${segDate} == 4) selected #end>最近三个月</option>
                            </select>
                        </label>

                        <label for="">
                            <input type="submit" class="skins-btn in-sub" style="margin-bottom: 15px;" value="查询">
                        </label>
                    </div>

                    <div class="vip-jz-main zc-item-table">
                        <table>
                            <tr>
                                <th>产品代码</th>
                                <th>产品名称</th>
                                <th>单位净值</th>
                                <th>累计净值</th>
                                <th>净值日期</th>
                            </tr>
                            #foreach($productJzInfo in $productJzInfo)
                                <tr>
                                    <td>${productJzInfo.fundCode}</td>
                                    <td>${productJzInfo.fundName}</td>
                                    <td>${productJzInfo.nav}</td>
                                    <td>${productJzInfo.totalNav}</td>
                                    <td>${productJzInfo.navDate}</td>
                                </tr>
                            #end
                        </table>
                    </div>
                </div>

                <div class="vip-pages" style="padding: 20px 0 0 20px;">
                    <div class="btnb">
                        <a id="home" href="javascript:void(0)" class="tofirst">首页</a>
                        <a id="before" href="javascript:void(0)" class="toprev">上一页</a>
                        <a id="next" href="javascript:void(0)" class="tonext">下一页</a>
                        <a id="last" href="javascript:void(0)" class="tolast">末页</a>
                    </div>
                    <input type="hidden" id="lastNo" value="${pageNum}">
                    <div class="total">总条数：${listCount}&nbsp;&nbsp;&nbsp;&nbsp;总页数：${pageNum}</div>
                    <div class="num">
                        <span>当前页</span><input type="text" id="pageNo" name="pageNo" value = "${pageNo}" onkeyup="value=value.replace(/[^\d]/g,'')";><a href="javascript:queryForm.submit()">跳转</a>&nbsp;&nbsp;&nbsp;
                        <span>每页显示</span>
                        <input type="text" id="pageSize" name="pageSize" value = "${pageSize}" onkeyup="value=value.replace(/[^\d]/g,'')"/>
                        <a href="javascript:queryForm.submit()">设置</a>
                    </div>
                </div>
            </div>
        </div>
        </form>
        <!-- 高端理财-END -->
    </div>
    #end
    #require("wtgf:page/special/productJz/productJz.vm")

#end
