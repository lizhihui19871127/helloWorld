#extends("wtgf:page/layout/layoutBind.vm")
#require("wtgf:static/css/trade/dividend_method.css")
#block("page_var")
#set($currentNav="buy")
#set($GF_VIEWINFO.mainNav='r2')
#set($GF_VIEWINFO.subNav='c25')
#end ##page_var
#block("content_main")

<div class="content-main">
    <!-- 分红方式-START -->
    <div class="container-pay">
        <div class="pageMain">

            <div class="pay-main pay-cz-main pay-order-main">

                <div class="cz-main">
                    <table class="fh_table">
                        <tr>
                            <th class="first_th">基金名称</th>
                            <th>当前分红方式</th>
                            <th>操作</th>
                        </tr>
	                    #if($dividholds && $dividholds.size() > 0)
		                    #foreach($divid in $dividholds)
			                    #set($fundinfo = $fund_tool.getFundInfo($!divid.fundCode))
                                <tr>
                                    <td class="first_td"><span>$!fundinfo.fundCode</span> | <span>$!fundinfo.fundName</span></td>
	                                #set($fundTypeVal = $fundinfo.fundType.enumItemName)
	                                #if($fundTypeVal == '2' || $fundTypeVal == '21' || $fundinfo.productType == '4') ##货币基金和短期理财固定为红利再投不可修改
                                        <td class="help_tishi"><span class='sub-box'>红利再投资</span></td>
                                        <td class="kong">---</td>
		                            #elseif($fundinfo.fundStatus.enumItemValue == 4) ##停止交易的基金不可修改
                                        <td class="help_tishi"><span class='sub-box'>$!enum_tool.getDividendMethod($!divid.dividendMethod)</span></td>
                                        <td class="kong">---</td>
		                            #elseif($divid.dividMethodReq && $divid.dividMethodReq != '') ##当天修改了分红方式的要提示并不能修改
                                        <td class="help_tishi">
                                            <span class='sub-box'>$enum_tool.getDividendMethod($!divid.dividMethodReq)
                                                <img src="/static/wtgf/img/dividmethod/dividend_method_i1.png?v=20160330" alt=""/>
                                            <div class="sub-tips">
                                                <i></i><p>当前分红方式未确认，需1个交易日确认结果</p>
                                            </div>
                                            </span>
                                        </td>
                                        <td class="kong">---</td>
	                                #else
                                        <td><span>$!enum_tool.getDividendMethod($!divid.dividendMethod)</span></td>
                                        <td class="xiuGai"><span class="xiugai_pop" fundcode="$!divid.fundCode" curdivid="$!divid.dividendMethod">修改</span></td>
	                                #end
                                </tr>
		                    #end
		                #else
		                    <tr><td colspan="3" align="center"></td></tr>
	                    #end
                    </table>
                </div>
                <div class="help_list">
                    <h3><img src="/static/wtgf/img/dividmethod/help.png" alt=""/>帮助</h3>
                    <ul>
                        <li>1. 红利再投资指将分得的红利直接再投资该基金，免所得税和再投资的手续费。现金红利是指直接获得现金红利。</li>
                        <li>2. 修改分红方式申请需T+1个交易日确认。</li>
                        <li>3. 在银行、券商等代销机构购买的基金，请回到代销机构进行相应操作。</li>
                    </ul>
                </div>
                <!-- 网上交易提示信息 -->
                <div class="pop pop-bank-fail pop-bank-yhyz" style="display:none;">
                    <div class="pop-main">
                        <a href="javascript:void(0);" class="pop-close js-pop-close">关闭</a>

                        <div class="pop-head">网上交易提示信息</div>
                        <div class="pop-content">
                            <h3 style="padding-left: 35px; font-weight: normal;">确认要修改该基金的分红方式为<span class="dividpoptext" style="color: #DF5412;">红利再投资</span>？</h3>

                            <p style="padding-left: 35px;margin-bottom: 25px;">修改分红方式需1个交易日确认，届时可前往“交易记录查询”查看。</p>

                            <p style="padding-left: 80px;">
                                <a class="skins-btn cancel js-pop-close" href="javascript:void(0);"
                                   style="margin-right: 65px;">取消</a>
                                <a class="skins-btn chgsubmit" href="javascript:void(0);">确认</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
	<form id="moddividform" action="/main/trade/moddividmethod/modify" method="post">
		<input type="hidden" name="fundCode">
		<input type="hidden" name="dividReq">
	</form>
    <!-- 分红方式-END -->
</div>

#end ##content_main
#require("wtgf:page/trade/moddividmethod/moddividmethod.vm")

#end ##extends
