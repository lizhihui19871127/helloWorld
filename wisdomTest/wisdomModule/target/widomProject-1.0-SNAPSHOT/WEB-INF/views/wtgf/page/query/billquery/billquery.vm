#block("content_main")
<!-- 账单查询 -->
<div class="container-vip">

    <form id="queryForm" method="post" action="/main/bill/billquery"  >
        <input name="flag" type='hidden' id="flag" value="$flag">
        <input name="yearshow" type='hidden' id="yearshow" value="$year">
        <input name="monthshow" type='hidden' id="monthshow" value="$month">
        <input name="seasonshow" type='hidden' id="seasonshow" value="$season">
        <input name="businCode" type='hidden' id="businCode" value="000">
        <div class="vip-bil-head zhcx-head">

                <label for="">
                    类 型:
                    <input type="radio" name="type" value="1" class="vip-bill-rodio">年度
                    <input type="radio" name="type" value="2" class="vip-bill-rodio" >季度
                    <input type="radio" name="type" value="3" class="vip-bill-rodio" >月度
                    <input type="radio" name="type" value="4" class="vip-bill-rodio" >更多区间


                        <input type="button" class="skins-btn in-sub vip-bill-rodio qbtn" value="查询">

                </label>
            <div id="routineDate" class="vip-bill-query" >
                <select name="year" id="year"  style="width:80px;">
                </select>

                <select name="season" id="season" style="width:80px;">
                    <option value="1">1季度</option>
                    <option value="2">2季度</option>
                    <option value="3">3季度</option>
                    <option value="4">4季度&nbsp;</option>
                </select>

                <select name="month" id="month" style="width:80px;">
                    <option value="01">1月</option>
                    <option value="02">2月</option>
                    <option value="03">3月</option>
                    <option value="04">4月</option>
                    <option value="05">5月</option>
                    <option value="06">6月</option>
                    <option value="07">7月</option>
                    <option value="08">8月</option>
                    <option value="09">9月</option>
                    <option value="10">10月</option>
                    <option value="11">11月</option>
                    <option value="12">12月</option>
                </select>
            </div>
            <div id="cutomeDate" style="display:none;" class="vip-bill-query">
                开始日期
                <input type="hidden" name="startDate" id="startDate"  value="$startDate"/>
                <input type="text" id="startDatePicker" class="Wdate" style="padding-left: 3px" value="$startDate"/>

                结束日期

                <input type="hidden" name="endDate" id="endDate" value="$endDate"/>
                <input type="text" id="endDatePicker" class="Wdate" style="padding-left: 3px" value="$endDate"/>
            </div>
           </div>

     </form>


<div class="vip-zc-main portfoliodetail">
    <div class="zc-item">
        <div class="zc-item-head">
            <h3>您本期的投资组合</h3>
        </div>
        <div class="zc-item-table">
            <table>
                <tr>
                    <th>基金名称</th>
                    <th class="sortkey" dtype="F">基金净值</th>
                    <th class="sortkey" dtype="F">持有份额</th>
                    <th class="sortkey" dtype="F">期末市值</th>
                    <th>分红方式</th>
                    <th>收费方式</th>
                    <th>销售渠道</th>
                </tr>
                #foreach($shareInfo in $shareList)
                    #if($shareInfo.fundName=="合计")

                        <tr >
                            <th>$shareInfo.fundName</th>
                            <th>$shareInfo.fundNet</th>
                            <th>$shareInfo.fundShare</th>
                            <th>$shareInfo.totalValue</th>
                            <th>$shareInfo.dividendMethodShow</th>
                            <th>$shareInfo.shareTypeShow</th>
                            <th>$shareInfo.salenet</th>
                        </tr>

                  #else
                      <tr>
                          <td>$shareInfo.fundName</td>
                          <td>$shareInfo.fundNet</td>
                          <td>$shareInfo.fundShare</td>
                          <td>$shareInfo.totalValue</td>
                          <td>$shareInfo.dividendMethodShow</td>
                          <td>$shareInfo.shareTypeShow</td>
                          <td>$shareInfo.salenet</td>
                      </tr>
                  #end

                #end

                  #foreach($shareInfo in $usdshareList)
                      #if($shareInfo.fundName=="合计")

                          <tr >
                              <th>$shareInfo.fundName</th>
                              <th>$shareInfo.fundNet</th>
                              <th>$shareInfo.fundShare</th>
                              <th>$shareInfo.totalValue</th>
                              <th>$shareInfo.dividendMethodShow</th>
                              <th>$shareInfo.shareTypeShow</th>
                              <th>$shareInfo.salenet</th>
                          </tr>

                      #else
                          <tr>
                              <td>$shareInfo.fundName</td>
                              <td>$shareInfo.fundNet</td>
                              <td>$shareInfo.fundShare</td>
                              <td>$shareInfo.totalValue</td>
                              <td>$shareInfo.dividendMethodShow</td>
                              <td>$shareInfo.shareTypeShow</td>
                              <td>$shareInfo.salenet</td>
                          </tr>
                      #end
                    #end



            </table>
        </div>
    </div>
</div>

<div class="vip-zc-main fundtradedetail">
    <div class="zc-item">
        <div class="zc-item-head">
            <h3>您本期的基金交易明细</h3>
        </div>
        <div class="zc-item-table">
            <table>
                <tr>
                    <th>申请日期</th>
                    <th>交易类型</th>
                    <th>基金名称</th>
                    <th class="sortkey" dtype="F">成交份额</th>
                    <th class="sortkey" dtype="F">成交净值</th>
                    <th class="sortkey" dtype="F">成交金额</th>
                    <th class="sortkey" dtype="F">手续费</th>
                    <th>收费方式</th>
                    <th>销售渠道</th>
                </tr>
                #foreach($stateinfo in $resultList)
                    <tr>
                    <td>$stateinfo.confirmDate</td>
                    <td>$stateinfo.businCodeShow</td>
                    <td>$stateinfo.fundName</td>
                    <td>$stateinfo.confirmShare</td>
                    <td>$stateinfo.dayNav</td>
                    <td>$stateinfo.confirmBalance</td>
                    <td>$stateinfo.fare</td>
                    <td>$stateinfo.shareTypeShow</td>
                    <td>$stateinfo.netNo</td>
                </tr>
                #end
            </table>
        </div>
    </div>
</div>

<div class="vip-zc-main  abonusdetail">
    <div class="zc-item">
        <div class="zc-item-head">
            <h3>您本期的分红明细</h3>
        </div>
        <div class="zc-item-table">
            <table>
                <tr>
                    <th>基金名称</th>
                    <th>分红方式</th>
                    <th>现金分红</th>
                    <th>红利再投资份额</th>
                    <th>分红发放日</th>
                    <th>销售渠道</th>
                </tr>

                #foreach($divideninfo in $dividendList)
                    <tr>
                    <td>$divideninfo.fundName</td>
                    <td>$divideninfo.dividendmethodShow</td>
                    <td>$divideninfo.realBalance</td>
                    <td>$divideninfo.reInvestBalance</td>
                    <td>$divideninfo.dividenddate</td>
                    <td>$divideninfo.netno</td>
                </tr>
                #end
            </table>
            <p class="h201102" style="padding-top:20px;width: 96%;"><a href="javascript:loadReport();" style="color:#262626"><img src="/static/wtgf/img/printer.png" style="width: 15px;height: 15px;margin-right: 3px"   alt="">打印</a></p>
        </div>
    </div>
</div>





##</div>
</div>
