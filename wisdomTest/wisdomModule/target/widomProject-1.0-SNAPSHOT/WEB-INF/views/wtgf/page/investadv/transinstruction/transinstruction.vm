#extends("wtgf:page/layout/layout.vm")
#block("header_scripts")
#require("wtgf:static/css/investadv/gftg_account.css")
#require("wtgf:static/css/investadv/gftg_account.js")
#end
#block("page_var")
#set($currentNav="investadv")
#set($currentSubNav="transinstruction")
#set($GF_VIEWINFO.mainNav='r9')
#set($GF_VIEWINFO.activityUrl=$activityUrl)
#set($USE_BOOTSTRAP=0)
#end

#block("content_main")

<!-- 订单支付-START -->
<div class="container-account">
    <div class="pageMain">

##        <div class="banner">
##            <div class="banner-box" style="background-image:url(static/images/banner.jpg);"></div>
##        </div>
        <!-- 修改模块 -->
        <div class="account-main account-cz-main">

            <div class="account_main_tab">
                <ul class="clearfix">
                    <li><a href="/main/investadv/advinfo?advid=${advid}">基本信息</a></li>
                    <li><a href="/main/investadv/transinfo?advid=${advid}">调仓方案</a></li>
                    <li class="current"><a href="/main/investadv/transinstruction?advid=$!{advid}">调仓指令</a></li>
                    <li><a href="/main/investadv/holds?advid=${advid}">账户持仓</a></li>
                    <li><a href="/main/investadv/profinfo?advid=${advid}">风险收益</a></li>
                    <li><a href="javascript:void(0)">模拟试算</a></li>
                </ul>
            </div>
            <form action="/main/investadv/transinstruction" method="post" class="item_table dczl_msg">
	            <input type="hidden" name="advid" value="${advid}"/>
                <table>
                    <tr class="first_tr">
                        <td colspan="11">
                            <div>
                                <label for="start_data">开始日期：</label>
                                <input type="text" id="startdateslt" name="startdate" value="$!startdate" readonly="readonly"/>
                            </div>
	                        <div>
                                <label for="start_data">结束日期：</label>
                                <input type="text" id="enddateslt" name="enddate" value="$!enddate" readonly="readonly"/>
	                        </div>
                            <div class="select_list">
                                <label class="shengxiao">确认状态：
                                    <select name="confirmflag" id="confirmflagslt">
	                                    <option value="" #if(!$confirmflag || $confirmflag == "") selected="selected" #end>全部</option>
                                        <option value="1" #if($confirmflag == "1") selected="selected" #end>确认成功</option>
                                        <option value="0" #if($confirmflag == "0") selected="selected" #end>确认失败</option>
	                                    <option value="9" #if($confirmflag == "9") selected="selected" #end>未确认</option>
                                    </select>
                                </label>
                            </div>
                            <div class="select_list">
                                <label for="over_data">相关方案：
                                    <select name="transid" id="transplanslt">
                                        <option value="" #if(!$transid || $transid == "") selected="selected" #end>全部</option>
	                                    #foreach($transplan in $transplans)
                                            <option value="$!transplan.transid" #if($transplan.transid == $transid) selected="selected" #end>$!{transplan.alias}</option>
	                                    #end
                                    </select>
                                </label>
                            </div>
                            <div class="right_btn">
                                <input type="submit" value="查询" />
                                <input type="reset" class="trans_reset" value="清空" />
                            </div>
                        </td>
                    </tr>
                    <tr class="table_head">
                        <th>指令日期</th>
                        <th>确认日期</th>
                        <th>指令周期</th>
                        <th>指令类型</th>
                        <th>相关基金A</th>
                        <th>相关基金B</th>
                        <th>指令金额</th>
                        <th>指令份额</th>
                        <th>交易费用</th>
                        <th>确认状态</th>
                        <th>所属方案</th>
                    </tr>
	                #if($transreqs && $transreqs.size() > 0)

		                #foreach($investadvreq in $transreqs)
                            <tr delegateno="$!investadvreq.delegateno">
                                <td>$dsp_tool.transferDateFormat($investadvreq.planDate, "yyyyMMdd", "yyyy.MM.dd")</td>
                                <td>#if($investadvreq.confirmDate)
					                $dsp_tool.transferDateFormat($investadvreq.confirmDate, "yyyyMMdd", "yyyy.MM.dd")
				                #else
                                    -
				                #end
                                </td>
                                <td>T + $investadvreq.reqPeriod</td>
                                <td>$dsp_tool.getBusinName($investadvreq.businCode, $investadvreq.fixBusinCode)</td>
                                <td>
					                #set($fundinfo = $fund_tool.getFundInfo($!investadvreq.fundCode))
					                #if($fundinfo)
						                $!fundinfo.fundName
					                #else
                                        -
					                #end</td>
                                <td>
					                #set($otherfundinfo = $fund_tool.getFundInfo($!investadvreq.otherFundCode))
					                #if($otherfundinfo)
						                $!otherfundinfo.fundName
					                #else
                                        -
					                #end</td>
                                <td>
					                #if($investadvreq.requestBalance) $number_tool.format('#,###.##', $investadvreq.requestBalance) #else - #end
                                </td>
                                <td>
					                #if($investadvreq.requestShare) $number_tool.format('#,###.##', $investadvreq.requestShare) #else - #end
                                </td>
                                <td>
					                #if($investadvreq.fare) $number_tool.format('#,###.##', $investadvreq.fare) #else - #end
                                </td>
                                <td>
					                $enum_tool.getConfirmShow($!investadvreq.confirmFlag)
                                </td>
                                <td><a href="/main/investadv/transinfo?advid=$!{advid}&transid=$!investadvreq.transid">$!investadvreq.transName</a></td>
                            </tr>
		                #end
		            #else
		                <tr><td colspan="11" align="center">查询结果为空！</td></tr>
	                #end
                </table>
            </form>
        </div>
        <!-- 修改模块结束 -->
    </div>
</div>
<!-- 订单支付-END -->

#end ##content_main

#require("wtgf:page/investadv/transinstruction/transinstruction.vm")
#end ##extends