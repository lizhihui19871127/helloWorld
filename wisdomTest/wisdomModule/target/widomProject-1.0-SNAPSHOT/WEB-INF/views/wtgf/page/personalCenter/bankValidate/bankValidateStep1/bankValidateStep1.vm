#extends("wtgf:page/layout/layoutBind.vm")
#block("page_var")
#set($currentNav="buy")
#set($GF_VIEWINFO.mainNav='r2')
#set($GF_VIEWINFO.subNav='c28')
#set($flag=$!request.getParameter('msg'))
#end
#block("content_main")
<div class="content-main">
   <div id="wrapper" class="clearfix" >
        <div class="questionReset_box">
            <div class="#if($flag=='card')progress2#end progress1">
                #if($flag=='card')
                    <span class="current one">验证身份</span>
                    <span class="two">验证银行卡</span>
                    <span class="three">设置新手机号码</span>
                    <span class="four">设置成功</span>
                #else
                    <span class="current one">#if($flag == 'phone')验证原手机号#else验证手机号码#end</span>
                    <span class="two">#if($flag == 'phone')设置新手机号#else设置密保问题#end</span>
                    <span class="three">设置成功</span>
                #end
            </div>
            <form name="sendFrom" action="step2.html">
                #if($flag=='card')
                    <label for="" class="clearfix">
                        <span>姓名</span>
                        <div>
                            <input type="text" placeholder="请输入真实姓名"/>
                        </div>
                    </label>
                    <label for="" class="clearfix">
                        <span>证件号码</span>
                        <div>
                            <input type="text" placeholder="请输入证件号码" />
                        </div>
                    </label>
                #elseif($flag=='question')
                    <div class="bh_questions">
                        <div class="_question">
                            <span>安全保护问题一</span>
                            <p>我爸爸的名字是</p>
                        </div>
                        <div class="answer_question">
                            <span>答案</span>
                            <div>
                                <input type="text" placeholder="" />
                            </div>
                        </div>
                    </div>
                    <div class="bh_questions">
                        <div class="_question">
                            <span>安全保护问题二</span>
                            <p>我外婆的名字是</p>
                        </div>
                        <div class="answer_question">
                            <span>答案</span>
                            <div>
                                <input type="text" placeholder="" />
                            </div>
                        </div>
                    </div>
                    <div class="bh_questions">
                        <div class="_question">
                            <span>安全保护问题三</span>
                            <p>我妈妈的生日是</p>
                        </div>
                        <div class="answer_question">
                            <span>答案</span>
                            <div>
                                <input type="text" placeholder="" />
                            </div>
                        </div>
                    </div>
                #else
                    <label for="" class="clearfix">
                        <span>手机号</span>
                        <div class="phoneN">185****2445</div>
                    </label>
                    <label for="" class="clearfix">
                        <span>短信验证码</span>
                        <div>
                            <div class="resetStyle">
                                <input type="text" name="phoneNum" class="inputNum" style="margin:0;vertical-align:middle;" placeholder="填写收到的6位数字" /><span id="getCheck" class="yanzm">获取验证码</span>
                            </div>
                            <div class="checkWrap"><i class="my-icon"></i><span class="my-title">短信验证码已发送到你的手机上，请及时查收。</title></div>
                        </div>
                    </label>
                #end
                <div class="next_btn">
                    <input type="submit" value="下一步" /><a href="#if($flag=='phone' ||$flag=='card'||$flag=='question')../changeMobileNum/changeMobileNum.vm#else../changeSafeQuestion/changeSafeQuestion.vm#end">重新选择验证方式</a>
                </div>
            </form>
        </div>
    </div>
</div>

#end
#require("wtgf:page/personalCenter/checkPwStep1/checkPwStep1.vm")

#end
