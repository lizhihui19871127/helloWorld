#extends("wtgf:page/layout/layoutSpecial.vm")
    #block("page_var")
    #set($currentNav="specialshare")
    #set($currentSubNav="index")
    #set($GF_VIEWINFO.subNav='c35')
    #end
    #block("content_main")


    <div class="content-main">
        <!-- 高端理财-START -->
        <div class="container-vip wrap" style="margin-left: 0px;">
            <div class="pageMain" style="padding:0 0 0 0;padding-bottom:2px">
                <div class="vip-zc-main">
                    <div class="zc-item">
                        <div class="zc-item-table">
                            <table>
                                #if(!$orderProductInfo)
                                    <tr><th>您尚未设定高端理财预约协议!</th></tr>
                                #else
                                    <tr>
                                        <th>产品名称</th>
                                        <th>业务类型</th>
                                        <th>钱袋子账户</th>
                                        <th>预约金额</th>
                                        <th>预约日期</th>
                                        <th>认购日期</th>
                                        <th>协议状态</th>
                                        <th>操作</th>
                                    </tr>
                                #end
                                #foreach(${orderProductInfo} in ${orderProductInfo})
                                    <tr>
                                        <td>${orderProductInfo.fundName}</td>
                                        <td>
                                            #if(${orderProductInfo.ordertype} == '5' || ${orderProductInfo.ordertype} =='6')
                                                预约认购
                                            #elseif(${orderProductInfo.ordertype} == '7')
                                                预约申购
                                            #end
                                        </td>
                                        <td>${orderProductInfo.bankno}</td>
                                        <td>${orderProductInfo.requestshare}</td>
                                        <td>${orderProductInfo.requestdate}</td>
                                        <td>
                                            #if(${orderProductInfo.hopedate} == '')
                                                未确定
                                            #else
                                                ${orderProductInfo.hopedate}
                                            #end
                                        </td>
                                        <td>
                                            #if(${orderProductInfo.state}=='A')
                                                待触发
                                            #elseif(${orderProductInfo.state}=='H' && ${orderProductInfo.issuccess}=='1')
                                                触发成功
                                            #else
                                                <input type="hidden" name="errormsg" value="${orderProductInfo.errormsg}">
                                                #if(${orderProductInfo.errormsg} != "")
                                                    <span class="f" style="cursor:pointer;color:blue;text-decoration:underline;">触发失败</span>
                                                #else
                                                    已取消
                                                #end
                                            #end
                                        </td>
                                        <td>
                                            #if(${orderProductInfo.state} == 'A')
                                                <input type="hidden" value="${orderProductInfo.protocol}">
                                                <input type="hidden" value="${orderProductInfo.tradeacco}">
                                                <a class="zc-btn btn1 cancelYY" href="javascript:void(0)">取消预约</a>
                                                #if(${orderProductInfo.ordertype} == '5' || ${orderProductInfo.ordertype} == '6')
                                                    <a class="zc-btn btn3" href="../../../trade/SpecialBuyAction.do?method=orderPre&modifyFlag=1&protocol=${orderProductInfo.protocol}&fundCode=${orderProductInfo.fundcode}&applyMoney=${orderProductInfo.money}&tradeAcc=${orderProductInfo.tradeacco}&orderFlag=0&orderType=${orderProductInfo.ordertype}&hopedate=${orderProductInfo.hopedate}">修改预约金额</a>
                                                #elseif(${orderProductInfo.ordertype} == '7')
                                                    <a class="zc-btn btn3" href"../../../trade/SpecialBuyAction.do?method=orderPre&modifyFlag=1&protocol=${orderProductInfo.protocol}&fundCode=${orderProductInfo.fundcode}&applyMoney=${orderProductInfo.money}&tradeAcc=${orderProductInfo.tradeacco}&orderFlag=1&orderType=${orderProductInfo.ordertype}&hopedate=${orderProductInfo.hopedate}">修改预约金额</a>
                                                #end
                                            #else
                                                ---
                                            #end
                                        </td>
                                    </tr>
                                #end
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- 高端理财-END -->
    </div>
    #end
    #require("wtgf:page/special/orderSearch/orderSearch.vm")

#end
