#extends("wtgf:page/layout/layoutBind.vm")
#block("page_var")
#set($currentNav="account")
#set($GF_VIEWINFO.mainNav='r5')
#set($GF_VIEWINFO.subNav='c50')
#end
#block("content_main")

<div class="content-main">
    <!-- 银行卡-START -->
    <div class="container-bank wrap" style="margin-left: 0px;">
        <form name="frm" id="frm" action="/main/bankCards/bindCard" target="_blank" method="post">
            <input type="hidden" name="bankNo" id="bankNo" value="" />
            <input type="hidden" name="capitalMode" id="capitalMode" value="" />
            <input type="hidden" name="verifyMethod" id="verifyMethod" value="" />
            <input type="hidden" name="verifySequence" id="verifyToken" value="" />
            <input type="hidden" name="retryFlag" id="retryFlag" value="" />
            <input type="hidden" name="bankName" id="bankName" value="" />
            <input type="hidden" name="verifyBusiness" id="verifyBusiness" value="bindCard" />
            <div class="pageMain" style="padding:0 0 0 0;padding-bottom:2px">
                <div class="bank-main">

                    <div class="bank-item item1">
                        <dl class="clearfix">
                            <dt><span>*仅能添加您本人的借记卡,首张绑定的银行卡无法删除</span></dt>
                            <dd>
                                <span class="t">选择银行卡</span>

                                <label class="in-label" for="">
                                    <div class="bank-sel" id="bankInfo"></div>

                                    <div class="bank-list" id="bankListView">
                                        <ul class="clearfix" style="padding:0px;margin:0 0 0 0">
                                            <li>
                                            </li>
                                        </ul>
                                    </div>

                                    <div class="bank-info" id="bankTips">
                                        <ul>
                                            <li style="margin-left:-30px">
                                                <em>【费率折扣】</em>
                                                <span id="discountMsg"></span>
                                            </li>
                                            <li style="margin-left:-30px">
                                                <em>【支付额度】</em>
                                                <span id="limitMsg"></span>
                                                <a href="javascript:;" id="guideTips"></a>
                                            </li>
                                            <li style="margin-left:-30px">
                                                <em>【绑卡方式】</em>
                                                <span id="bindMsg"></span>
                                            </li>
                                            <li style="margin-left:-30px">
                                                <em>【其他信息】</em>
                                                <span id="otherMsg"></span>
                                            </li>
                                        </ul>
                                    </div>

                                </label>
                            </dd>
                        </dl>
                    </div>

                    <!-- 添加银行卡 已选银行（已开户） -->
                    <div class="bank-item item2 item-nobr">
                        <dl class="clearfix">
                            <dd id="bankCardNoView">
                                <span class="t">银行卡号</span>

                                <label class="in-label" for="">
                                    <input class="in-txt in-card-num" id="bankCardNo" name="bankCardNo" type="text" value="" onkeyup="value=value.replace(/[^\d]/g,'')";>
                                    <div class="bank-card-num"></div>
                                </label>
                            </dd>
                            <dd id="telView">
                                <span class="t">
                                    银行预留手机号码
                                    <span class="js-phone-tips">
                                        <img src="/static/wtgf/img/bindingCard/i1.png" alt="" id="updateTelImg">
                                        <div class="phone-tips" id="imgTips">
                                            <i></i>
                                            如何修改手机验证？
                                        </div>
                                    </span>
                                </span>

                                <label class="in-label" for="" style="line-height: 28px;">
                                    <input class="in-txt" id="mobilePhone" name="mobilePhone" type="text" value="">
                                    <a class="skins-btn get-code" href="javascript:;" id="getValidCode" style="width:120px">获取验证码</a>
                                </label>

                            </dd>
                            <dd id="verifyCodeView">
                                <span class="t">验证码</span>

                                <label class="in-label" for="">
                                    <input class="in-txt" id="verifyCode" name="verifyCode" maxlength="6" type="text" value="" placeholder="请输入手机收到的验证码">
                                </label>

                            </dd>
                            <dd id="pwd">
                                <span class="t">设置交易密码</span>

                                <label class="in-label" for="">
                                    <input class="in-txt" id="tradePassWord" name="tradePassWord" type="password" value="">
                                    <span id="passwdTipsSpan">(6-8位字母、数字或下划线组合)</span>
                                </label>

                                <p class="tips err"></p>
                            </dd>
                            <dd id="pwdApply">
                                <span class="t">确认交易密码</span>

                                <label class="in-label" for="">
                                    <input class="in-txt" id="tradePasswdConfirm" name="tradePasswdConfirm" type="password" value="">
                                </label>

                                <p class="tips err"></p>
                            </dd>
                            <dd class="agreen" id="xieyi">
                                <input id="agreeCheckbox" name="agreeCheckbox" type="checkbox" otitle="阅读并同意" style="margin-bottom:5px">
                                请仔细阅读并同意
                                <span id="qyxy"></span>
                            </dd>
                            <dd>
                                <input class="skins-btn in-sub" type="submit" id="J_submitButton" name="J_submitButton" value="确认提交" otype="button" otitle="确认提交" oarea="新增卡绑卡提交">
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <!-- 银行卡-END -->
</div>

<div id="modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-header" style="height:20px;background-color:#e2e2e2;">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <span id="myModalLabel" class="specialFont">温馨提示</span>
    </div>
    <div class="modal-body">
        <div id="showInfoMsg" style="font:12px/1.5em 'Microsoft YaHei'"></div>
    </div>
    <div class="modal-footer" id="showLeverBtn">
        <button class="btn" data-dismiss="modal" aria-hidden="true" id="toUpdateLever">确认</button>
        <button class="btn" data-dismiss="modal" aria-hidden="true" id="addNewBankCard">继续添加银行卡</button>
    </div>
</div>

<div id="modal2" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-header" style="height:20px;background-color:#e2e2e2;">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <span id="myModalLabel" class="specialFont">银行卡验证提示信息</span>
    </div>
    <div class="modal-body">
        <div style="font:12px/1.5em 'Microsoft YaHei'">
            <div class="pop pop-bank-fail pop-main pop-content">
                <h3><span id="showErrormsg"></span></h3>
                <p>您可以关闭次对话框重新输入信息</p>
                <p>或选择
                    <a class="skins-btn" href="javascript:;" id="getWyzf" style="color:#fff;text-decoration: none">
                        银行网银验证
                        <span><i></i>银行网银验证一般需要U盾校验</span>
                    </a>
                </p>
            </div>
        </div>
    </div>
    <div class="modal-footer" id="showLeverBtn">
        <button class="btn" data-dismiss="modal" aria-hidden="true" id="toUpdateLever">确认</button>
    </div>
</div>

<div id="modal3" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-header" style="height:20px;background-color:#e2e2e2;">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <span id="myModalLabel" class="specialFont">银行卡验证提示信息</span>
    </div>
    <div class="modal-body">
        <div style="font:12px/1.5em 'Microsoft YaHei'">
            <div class="pop pop-bank-ask pop-main pop-content">
                <h3>请您在新打开的银行页面验证银行卡</h3>
                <p class="tips">验证银行卡完成前不要关闭此窗口</p>
                <p>
                    <a class="skins-btn btn-again" href="javascript:void(0)" id="submitAgain" style="color:#fff;text-decoration: none">
                        失败了,再试一次
                        <span>90%用户再试一次后成功</span>
                    </a>
                    <a class="skins-btn" id="checkSuccess" href="javascript:void(0)" style="color:#fff;text-decoration: none">验证成功</a>
                </p>
                <a class="cjwt" href="http://www.gffunds.com.cn/khfw/bzzx/cjwt/wsjy/jyfy/index_helpty.htm" target="_blank">添加银行卡常见问题&gt;</a>
                <br><br>
            </div>
        </div>
    </div>
</div>

<!-- 选择光大通联/招行直连，弹出框 -->
<div id="modal4" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-header" style="height:20px;background-color:#e2e2e2;">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <span id="myModalLabel" class="specialFont">网上交易-温馨提示</span>
    </div>
    <div class="modal-body">
        <div style="font:12px/1.5em 'Microsoft YaHei'">
                <span id="gdyhTipsView" style="line-height: 30px;">
                    1、光大银行首次签约过程中需设定“当日累计支付限额”，设定后无法修改，请设置合适的限额，以免因支付限额过低导致基金交易失败。<br/>
                    2、光大银行目前不支持认、申购（含定投和转换入）交易费率为0的基金产品(<font color="#eb5406;">包含充值钱袋子和申购C类收费基金</font>)。
                </span>
                <span id="zhzlTipsView" style="line-height: 30px;">
                    1、请确保输入正确的招行卡号，<font color="#eb5406;">若我司输入的卡号与招行网页输入不一致会影响资金入账。</font><br/>
                    2、请在招行结果页面点击“<font color="#eb5406;">广发基金</font>”完成全部绑卡流程（如下图所示）。<br/>
                    3、若曾通过网银添加过招行卡，请先前往“<font color="#eb5406;">招行网银--网上支付--直付通</font>”取消与广发基金的协议，取消后该卡将<font color="#eb5406;">无法交易</font>。<br/>
                    <img src="/static/wtgf/img/bindingCard/cmbTips.png" />
                </span>
            <div class="pop pop-bank-ask pop-main pop-content" style="margin-top: 10px;">
                <p>
                    <a class="skins-btn btn-again" id="addNewCard" href="javascript:void(0)"
                       style="color:#fff;text-decoration: none;background: #eb5406;border-color: #eb5406;">
                        继续添加银行卡
                    </a>
                    <a class="skins-btn" id="cancelBtn" href="javascript:void(0)"
                       style="color:#fff;text-decoration: none;background-color: #a3a3a3;border-color: #a3a3a3;">取消</a>
                </p>
            </div>
        </div>
    </div>
</div>

<!-- 邮政弹出框 -->
<div id="modal5" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-header" style="height:20px;background-color:#e2e2e2;">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <span id="myModalLabel" class="specialFont">网上交易-温馨提示</span>
    </div>
    <div class="modal-body">
        <div style="font:12px/1.5em 'Microsoft YaHei'">
                <span style="line-height: 30px;">
                    1、添加邮储银行卡前需开通银联在线支付业务。<a href="http://www.gffunds.com.cn/khfw/bzzx/cjwt/wsjy/yck/201511/t20151119_48613_help.htm" target="_blank">如何开通？</a>
                    <br/>2、邮储银行每日21-24点清算，将暂停支付交易。
                </span>
            <div class="pop pop-bank-ask pop-main pop-content" style="margin-top: 10px;">
                <p>
                    <a class="skins-btn btn-again" id="yzNewCard" href="javascript:void(0)"
                       style="color:#fff;text-decoration: none;background: #eb5406;border-color: #eb5406;">
                        继续添加银行卡
                    </a>
                    <a class="skins-btn" id="yzCancelBtn" href="javascript:void(0)"
                       style="color:#fff;text-decoration: none;background-color: #a3a3a3;border-color: #a3a3a3;">取消</a>
                </p>
            </div>
        </div>
    </div>
</div>
#end
#require("wtgf:page/bindingCard/addBindingCard/addBindingCard.vm")

#end
