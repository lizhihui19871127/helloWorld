#extends("wtgf:page/layout/layoutNoNav.vm")
#block("page_var")
    #set($HEADER_TITLE="欢迎进入广发基金网上开户注册系统！")
    #set($BOOTSTRAP_CONTAINER="")
    #set($IS_LOGIN=0)
#end

#block("content_main")
    <p class="empty-line"></p>
    <div class="container">
        <div class="row">
            <div class="span8 offset2">
                <p class="gflogo1"></p><p class="gflogo2Text">添加银行卡</p>
            </div>
        </div>
    </div>
    <p class="line"></p>

    <div class="container">
        <div class="span7 offset2 infosdiv">
            <p class="text-left text-success ">
                <img src="/static/wtgf/img/account/bk-icon-14102003.gif"/>
                尊敬的****，您已成功注册广发基金网站会员。
            </p>
        </div>
        <div class="span7 offset3 infosdiv">
            <p class="text-left text-info">
                您的基金账号为：*27001234789
            </p>
        </div>
        <div class="span12 offset1 infosdiv">
            <p class="text-left text-warning">
                在进行基金交易之前，建议您完成以下风险测评问卷，以便您更好的了解自己的风险偏好。
            </p>
            <p>风险测评问卷：</p>
        </div>

        <div class="span12 offset1">
            <form class="form-horizontal bk-end-fx">
                #foreach($bean in $questionList)
                    <dl>
                        <dt>第$bean.questionIndex题&nbsp;&nbsp;$bean.questionName</dt>
                        #if ($bean.questionType.enumItemValue == 2)
                            ## 填空题
                        #elseif($bean.questionType.enumItemValue == 1)
                            ##单选题
                            #foreach($answer in ${answerBeanMap.get($bean.questionKey)})
                                <dd><input id="bk-end-q1" type="radio" name="que1"><label for="bk-end-q1">$answer.name</label></dd>
                            #end
                        #elseif($bean.questionType.enumItemValue == 3)
                            ##多选题
                        #end
                    </dl>
                #end
            </form>

        </div>

        <div class="span3 offset4" id="nextbtndiv">
            <form class="form-inline" method="post" action="/wtgf/page/account/openaccount/openaccount_success">
            <button class="btn btn-large btn-warning" id="nextbtn" type="submit">&nbsp;&nbsp;确定&nbsp;&nbsp;</button>
            </form>
        </div>
    </div>
#end
#require("wtgf:page/account/openaccount/openaccount_step6/openaccount_step6.vm")
#end