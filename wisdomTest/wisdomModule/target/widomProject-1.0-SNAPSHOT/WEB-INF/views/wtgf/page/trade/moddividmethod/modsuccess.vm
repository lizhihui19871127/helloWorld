#extends("wtgf:page/layout/layoutBind.vm")
#require("wtgf:static/css/trade/dividend_method.css")
#block("page_var")
#set($currentNav="buy")
#set($GF_VIEWINFO.mainNav='r2')
#set($GF_VIEWINFO.subNav='c25')
#end ##page_var
#block("content_main")

<div class="content-main">
    <!-- 订单支付-START -->
    <div class="container-pay">
        <div class="pageMain">

            <div class="pay-main pay-over-main">
                <div class="info-back">
                    <h3 style="padding-left: 30px;margin-bottom: 20px;">您已成功提交申请，请等待交易确认！</h3>
                    <div>
                        <a href="/main/query/queryList" class="skins-btn">查看交易记录</a>
                    </div>
                </div>

	            <div class="cz-item">
		            #if($fundCode)
			            #set($fundInfo = $!fund_tool.getFundInfo($fundCode))
                        <dl>
                            <dt>订单信息</dt>
                        </dl>
                        <div class="item-table">
                            <table>
                                <tr>
                                    <th style="width: 320px;">基金名称
                                    </th>
                                    <th>业务名称</th>
                                    <th style="width: 200px;">目标分红方式
                                    </th>
                                    <th>所属交易日期</th>
                                </tr>
                                <tr>
                                    <td>$!{fundCode}│$!{fundInfo.fundName}</td>
                                    <td>修改分红方式</td>
                                    <td>$!{enum_tool.getDividendMethod($!dividReq)}</td>
                                    <td>$!{dsp_tool.transferDateFormat($!requestDate,'yyyyMMdd','yyyy.MM.dd')}</td>
                                </tr>
                            </table>
                        </div>
		            #end
	            </div>
            </div>
        </div>
	</div>
<!-- 订单支付-END -->
</div>

#end ##content_main

#require("wtgf:page/trade/moddividmethod/modsuccess.vm")

#end ##extends
