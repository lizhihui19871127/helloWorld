#extends("wtgf:page/layout/newlayoutNoNav.vm")
#block("page_var")
#set($HEADER_TITLE="欢迎登录！")
#set($BOOTSTRAP_CONTAINER="")
#set($IS_LOGIN=0)
#end
#block("header_scripts")

#end

#block("content_main")
#widget("wtgf:widget/modal/modal.vm")
<div class="login_content">
    <div class="login_content_center">
        <div class="top_bg">
            <img src="/static/wtgf/img/onePassport/child_bg2.png" alt="" />
        </div>
        <div class="bottom_bg">
            <img src="/static/wtgf/img/onePassport/child_bg1.png" alt="" />
        </div>
        <div class="login_box">
            #if($webShowInfo.content)
                <div class="msg">$!{webShowInfo.content}</div>
            #end
            <div class="login_main">
                <form action="http://www.baidu.com" id="frm" name="frm" style="margin: 0px;">
                    <p class="jigouzh" style="text-align: left;"><a href="/main/register/index">企业账户登录</a></p>
                    <p class="jigouzh" style="margin-bottom: 10px;margin-top: -22px;"><a href="/main/register/index">立即注册</a></p>
                    <div class="choose_way">
                        <select name="loginType" id="loginType" style="margin: 0px;color: black;" class="yh">
                            <option value="0">手机/证件号/昵称</option>
                            <option value="1">基金账号登录</option>
                        </select>
                    </div>
                    <div class="userName"><input type="text" class="yh" style="box-shadow: none;" id="userName" name="userName" placeholder="请输入账号"/><img src="/static/wtgf/img/onePassport/register_icon12.png" alt="" /></div>
                    <div class="password"><input type="password" class="yh" style="box-shadow: none;" id="tradePassword" name="tradePassword" size="18" placeholder="请输入登录密码"/><img src="/static/wtgf/img/onePassport/register_icon11.png" alt="" />
                        <a href="/main/resetLoginPwd/resetLoginPwd" target="_blank">忘记登录密码</a></div>
                    <div class="yanzm" id="yanzm" #if('y' != $needVerifyCode && 'Y' != $needVerifyCode) style="display:none" #end>
                        <input type="text" style="box-shadow: none;width:110px" placeholder="填写右侧验证码" id="verifyCode" name="verifyCode"/>
                        <span style="width:140px">#widget("common:widget/verifyCode/verifyCode.vm")</span>
                    </div>
                    <div class="login_btn">
                        <input type="button" value="登录" id="login" name="login"/>
                    </div>
                </form>
                <div class="other_login">
                    <p>在以下平台买过广发基金产品，<span style="color: #eb5406;">首次登录</span>请点击图标激活账户</p>
                    <ul style="margin:0px">
                        <li><a href="/main/otherAccountRegister/index">
                            <img src="/static/wtgf/img/onePassport/register_icon13.png" alt="" />
                            <p>银行、券商</p></a>
                        </li>
                        <li class="center"><a href="/main/otherAccountRegister/index">
                            <img src="/static/wtgf/img/onePassport/register_icon14.png" alt="" />
                            <p>微信理财通</p></a>
                        </li>
                        <li><a href="/main/otherAccountRegister/index">
                            <img src="/static/wtgf/img/onePassport/register_icon15.png" alt="" />
                            <p>百度金融</p></a>
                        </li>
                    </ul>
                    <ul style="margin:0px">
                        <li><a href="/main/otherAccountRegister/index">
                            <img src="/static/wtgf/img/onePassport/register_icon21.png" alt="" />
                            <p>苏宁零钱包</p></a>
                        </li>
                        <li class="center"><a href="/main/otherAccountRegister/index">
                            <img src="/static/wtgf/img/onePassport/register_icon19.png" alt="" />
                            <p>广发证券易淘金</p></a>
                        </li>
                        <li><a href="/main/otherAccountRegister/index">
                            <img src="/static/wtgf/img/onePassport/register_icon22.png" alt="">
                            <p>淘宝</p></a>
                        </li>
                    </ul>
                    <ul style="margin:0px">
                        <li><a href="/main/otherAccountRegister/index">
                            <img src="/static/wtgf/img/onePassport/register_icon20.png" alt="" />
                            <p>其他合作平台</p></a>
                        </li>
                        <span></span>
                        <span></span>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>


#end
#block("bottom_scripts")
#widget("wtgf:widget/changePwd/changePwd.vm")
#require("common:widget/softkeyboard/softkeyboard.js")
#end
#require("wtgf:page/onePassport/login/login.vm")
#end
