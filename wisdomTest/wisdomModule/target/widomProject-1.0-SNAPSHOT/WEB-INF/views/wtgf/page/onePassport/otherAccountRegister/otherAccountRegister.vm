#extends("wtgf:page/layout/newlayoutNoNav.vm")
#block("page_var")
#set($HEADER_TITLE="券商、银行、第三方平台用户注册！")
#set($BOOTSTRAP_CONTAINER="")
#set($IS_LOGIN=0)
#end

#block("content_main")
#widget("wtgf:widget/modal/modal.vm")
<div class="register_content container-bank">
    <div class="register_content_center">
        <div class="zhuce_box">
            <h2>加入广发基金，开启理财新旅程！</h2>
            <form action="/main/register/otherAccountToRegister" name="frm" id="frm" method="post">
                <label class="clearfixNew">
                    <span>姓名</span>
                    <div>
                        <input type="text" name="name" id="name" placeholder="请输入开户时的姓名" class="in-txt"/>
                    </div>
                </label>
                <label class="clearfixNew">
                    <span>证件类型</span>
                    <div style="height: 37px;">
                        <select name="identityType" id="identityType" style="width: 246px;height: 37px;">
                            <option value="0">身份证</option>
                            <option value="1">中国护照</option>
                            <option value="4">港澳通行证</option>
                            <option value="A">台胞证</option>
                        </select>
                    </div>
                </label>
                <label class="clearfixNew">
                    <span>证件号码</span>
                    <div>
                        <input placeholder="请输入开户时的证件号码" id="identityNo" name="identityNo" type="text" class="in-txt"/>
                    </div>
                </label>
                <div class="denglu_btn" style="padding-left: 21px;">
                    <input class="skins-btn in-sub" type="submit" id="J_submitButton" name="J_submitButton" value="下一步">
                </div>
            </form>
        </div>
    </div>
</div>
#end
#require("wtgf:page/onePassport/otherAccountRegister/otherAccountRegister.vm")
#end
